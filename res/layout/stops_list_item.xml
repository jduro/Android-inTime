<!--     Hidden ID shown next to the title/subtitle -->
    <TextView
        android:id="@+id/bus_stop_id"
        android:layout_width="40dp"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:padding="3dp" 
        android:visibility="invisible"/>
        
    <!-- Title of the news entry -->
    <TextView
        android:id="@+id/bus_stop_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/bus_stop_id"
        android:layout_alignTop="@+id/bus_stop_id"
		android:layout_margin="5dp"
        android:textStyle="bold" />
    
    <!-- Subtitle contains author and date -->
    <TextView
        android:id="@+id/bus_stop_time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bus_stop_name"
        android:layout_below="@+id/bus_stop_name" 
        android:textSize="14sp" />

</RelativeLayout>